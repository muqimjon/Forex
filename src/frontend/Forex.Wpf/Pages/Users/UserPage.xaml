<Page x:Class="Forex.Wpf.Pages.Users.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Forex.Wpf.Resources.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="810"
      Title="UserPage">


    <Page.Resources>
        <!-- Umumiy DataGridCell style -->
        <Style x:Key="TransparentCellStyle"
               TargetType="DataGridCell">
            <Setter Property="Padding"
                    Value="0" />
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="HorizontalContentAlignment"
                    Value="Center" />
            <Setter Property="VerticalContentAlignment"
                    Value="Center" />
            <Setter Property="Background"
                    Value="Transparent" />
            <Setter Property="FocusVisualStyle"
                    Value="{x:Null}" />
            <Setter Property="BorderThickness"
                    Value="0" />
            <Setter Property="BorderBrush"
                    Value="Transparent" />
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔎 Qidiruv -->
        <Border Width="240" Grid.Row="0" BorderBrush="{DynamicResource SelectedBorderColor}" BorderThickness="1" Padding="0" Margin="0 5" HorizontalAlignment="Left" CornerRadius="5" Background="{DynamicResource SelectedBackground}">
            <TextBox x:Name="txtSearch"
                   Width="230"
                   FontSize="16"
                   Margin="5,5,5,5"
                   Padding="0"
                   md:HintAssist.Hint="Qidiruv.."
                   BorderBrush="Gray"
                   BorderThickness="0"/>
        </Border>

        <Button x:Name="btnBack"
                BorderThickness="0"
                md:ButtonAssist.CornerRadius="5"
                Background="{DynamicResource OtherBackground}"
                Content="🔙 Orqaga"
                ToolTip="Orqaga"
                Grid.Row="0"
                HorizontalAlignment="Right"
                />

        <!-- ➕ Qo‘shish formasi -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <Border BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor }" Margin="1 0 1 2" Width="120" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <ComboBox x:Name="cbRole"
                        IsEditable="False"
                        Padding="5 0 2 0"
                        StaysOpenOnEdit="True"
                        IsTextSearchEnabled="False"
                        md:HintAssist.Hint="Tanlash"
                        BorderThickness="0"
                        FontSize="16"
                        Width="105"
                        Loaded="CbRole_Loaded"/>
            </Border>

            <Border BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor }" Margin="1 0 1 2" Width="115" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="txtName" FontSize="16" BorderThickness="0" Width="112" md:HintAssist.Hint="Nomi" Padding="5" />
            </Border>

            <Border BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor}" Margin="1 0 1 2" Width="142" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="txtPhone" FontSize="16" Width="140" BorderThickness="0" md:HintAssist.Hint="Telefon" Padding="5 5 2 5" TextChanged="txtPhone_TextChanged"/>
            </Border>

            <Border BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor}" Margin="1 0 1 2" Width="200" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="txtAddress" FontSize="16" Width="195" BorderThickness="0" md:HintAssist.Hint="Manzil" Padding="5"/>
            </Border>

            <Border BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor}" Margin="1 0 1 2" Width="200" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="txtDescription" FontSize="16" Width="195" BorderThickness="0" md:HintAssist.Hint="Izoh" Padding="5"/>
            </Border>

            <Border x:Name="brValutaType" BorderThickness="1" Visibility="Collapsed"  BorderBrush="{DynamicResource SelectedBorderColor }" Margin="1 0 1 2" Width="120" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <ComboBox x:Name="cbxValutaType"
                        IsEditable="False"
                        Padding="5 0 2 0"
                        StaysOpenOnEdit="True"
                        IsTextSearchEnabled="False"
                        md:HintAssist.Hint="Valyuta turi"
                        BorderThickness="0"
                        FontSize="16"
                        Width="105"/>
            </Border>


            <Border x:Name="brDiscount" Visibility="Collapsed" BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor }" Margin="1 0 1 2" Width="120" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="tbDiscount"  FontSize="16" BorderThickness="0" Width="115" md:HintAssist.Hint="Bonus" Padding="5"/>
            </Border>

            <Border x:Name="brAccount" Visibility="Collapsed" BorderThickness="1" BorderBrush="{DynamicResource SelectedBorderColor }" Margin="1 0 1 2" Width="120" Background="{DynamicResource SelectedBackground}" CornerRadius="4">
                <TextBox x:Name="tbAccount"  FontSize="16" BorderThickness="0" Width="115" md:HintAssist.Hint="Hisob qoldiq" Padding="5"/>
            </Border>

            <Button x:Name="btnSave" 
                    Visibility="Collapsed"
                    Content="💾 Saqlash"
                    MinWidth="50"
                    Margin="3 0 0 3"
                    md:ButtonAssist.CornerRadius="4"
                    BorderThickness="0"
                    Background="{DynamicResource OtherBackground}"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontWeight="Bold"
                    ToolTip="Saqlash"
                    Padding="5"/>
        
            <Button x:Name="btnUpdate" 
                    Visibility="Collapsed"
                    Content="🔄 Yangilash"
                    MinWidth="50"
                    Margin="3 0 0 3"
                    md:ButtonAssist.CornerRadius="4"
                    BorderThickness="0"
                    Background="{DynamicResource OtherBackground}"
                    Foreground="{DynamicResource PrimaryTextColor}"
                    FontWeight="Bold"
                    ToolTip="Yangilash"
                    Padding="5"/>
        </WrapPanel>

        <!-- 📋 Jadval -->
        <DataGrid x:Name="dgUsers"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Margin="0"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  ItemsSource="{Binding filteredUsers}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nomi" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Telefon" Binding="{Binding Phone}" Width="*"/>
                <DataGridTextColumn Header="Manzil" Binding="{Binding Address}" Width="*"/>
                <DataGridTextColumn Header="Izoh" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="Rol" Binding="{Binding Role}" Width="*"/>


                <!-- Actions -->
                <DataGridTemplateColumn Width="Auto">
                    <DataGridTemplateColumn.CellStyle>
                        <StaticResource ResourceKey="TransparentCellStyle" />
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:ActionButton EditCommand="{Binding EditUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                   DeleteCommand="{Binding RemoveUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                   SaveCommand="{Binding SaveUserCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                   CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
